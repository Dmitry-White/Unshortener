{
    "name": "Unshortener",
    "version": "2.1",
    "description": "Extend a shorten link!",
    "manifest_version": 2,
    "icons": {
        "16": "img/icon_16.png",
        "32": "img/icon_32.png",
        "48": "img/icon_48.png",
        "128": "img/icon_128.png"
    },
    "background": {
        "persistent": true,
        "scripts": [
            "background.js"
        ]
    },
    "permissions": [
        "webNavigation",
        "<all_urls>",
        "tabs",
        "webRequest",
        "webRequestBlocking",
        "http://expandurl.com/*"
    ],
    "browser_action": {
        "default_icon": "img/icon_16.png",
        "default_popup": "popup.html"
    }
}